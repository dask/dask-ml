version: 2
jobs:
  py36:
    docker:
      - image: continuumio/miniconda:latest
    environment:
      PYTHON: "3.6"
      ENV_NAME: "dask-ml-test"
    steps:
      - checkout
      - restore_cache:
          key: deps-{{ .Branch }}-36-{{ checksum "ci/environment.yml" }}
      - run:
          name: configure conda
          command: ./ci/install-circle.sh
      - run:
          command: |
            source activate ${ENV_NAME}
            pytest tests
      - run:
          command: |
            source activate ${ENV_NAME}
            flake8 dask_ml
      - save_cache:
          key: deps-{{ .Branch }}-36-{{ checksum "ci/environment.yml" }}
          paths:
            - "/opt/conda/envs/${ENV_NAME}/"

  # Now repeat for py27
  py27:
    docker:
      - image: continuumio/miniconda:latest
    environment:
      PYTHON: "27"
      ENV_NAME: "dask-ml-test"
    steps:
      - checkout
      - restore_cache:
          key: deps-{{ .Branch }}-27-{{ checksum "ci/environment.yml" }}
      - run:
          name: configure conda
          command: ./ci/install-circle.sh
      - run:
          command: |
            source activate ${ENV_NAME}
            pytest tests
      - run:
          command: |
            source activate ${ENV_NAME}
            flake8 dask_ml
      - save_cache:
          key: deps-{{ .Branch }}-27-{{ checksum "ci/environment.yml" }}
          paths:
            - "/opt/conda/envs/${ENV_NAME}/"

  # scikit-learn dev build
  sklearn_dev:
    docker:
      - image: continuumio/miniconda:latest
    environment:
      PYTHON: "3.6"
      ENV_NAME: "dask-ml-test"
    steps:
      - checkout
      - restore_cache:
          key: deps-{{ .Branch }}-sklearn-dev-{{ checksum "ci/environment.yml" }}
      - run:
          name: configure conda
          command: ./ci/install-circle.sh
      - run:
          name: install sklearn-dev
          command: |
            pip uninstall -y sklearn
            pip install --pre git+https://github.com/scikit-learn/scikit-learn
      - run:
          command: |
            source activate ${ENV_NAME}
            pytest tests
      - run:
          command: |
            source activate ${ENV_NAME}
            flake8 dask_ml
      - save_cache:
          key: deps-{{ .Branch }}-36-{{ checksum "ci/environment.yml" }}
          paths:
            - "/opt/conda/envs/${ENV_NAME}/"

workflows:
  version: 2
  build_and_test:
    jobs:
      - py36
      - py27
      - sklearn_dev
